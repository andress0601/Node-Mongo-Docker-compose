<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Listado y adicion de estudiantes</title>
    <!-- BOOTSTRAP CDN -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css" integrity="sha384-9gVQ4dYFwwWSjIDZnLEWnxCjeSWFphJiwGPXr1jddIhOegiu1FwO5qRGvFXOdJZ4" crossorigin="anonymous">
  </head>
  <body>

    <nav class="navbar navbar-dark bg-dark mb-4">
      <a class="navbar-brand" href="#">Listado y adicion de estudiantes</a>
    </nav>
  
  <div class="container">

    

    <div class="row">
  
      <!-- FORMULARIO -->

      <div class="col-md-5">
  
        <div class="card">
  
          <div class="card-body">
  
            <form action="/add" method="post">
  
              <div class="form-group">
  
                <input class="form-control" type="text" name="nombre" placeholder="Nombre">
  
              </div>
  
              <div class="form-group">
  
                <input class="form-control" type="number" name="edad" placeholder="Edad">
  
              </div>
            
              <div class="form-group">
  
                <input class="form-control" type="text" name="genero" placeholder="Genero">
  
              </div>
  
              <button class="btn btn-primary" type="submit">
                Añadir
              </button>
  
            </form>
  
          </div>
  
        </div>
  
      </div>

      <!-- LISTA -->

      <div class="col-md-7">
  
        <table class="table table-bordered table-hover">
    
          <thead>
    
            <tr>
    
              <th>N°</th>
              <th>Nombre</th>
              <th>Edad</th>
              <th>Genero</th>
    
            </tr>
    
          </thead>
    
          <tbody>
            <% for(var i=0; i < alumnos.length; i++) { %>
              <tr>
                <td><%= i + 1%></td>
                <td><strong><%= alumnos[i].nombre %></strong></td>
                <td><%= alumnos[i].edad %></td>
                <td><%= alumnos[i].genero %></td>
                <td>
                  <a href="/delete/<%= alumnos[i]._id %>"
                    class="btn btn-danger">
                    Borrar
                  </a>
                  <a href="/edit/<%= alumnos[i]._id %>" class="btn btn-info">
                    Editar
                  </a>
                </td>
              </tr>
            <% } %>
          </tbody>
    
        </table>
    
      </div>

  
    </div>
  
    
  

  
  </div>

</body>
</html>

